@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"]="Manage";
    ViewBag.Active="dab_users";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title">
                <h4 class="mb-0 font-size-18">Manage Roles</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home Page</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="UserRole">Users</a></li>
                    <li class="breadcrumb-item active">Manage Roles</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Demo purpose only -->
                    <div style="min-height: 300px;">
                        <div class="row">
                            <div class="col-12">
                                <h3>Manage Roles</h3>
                            </div>
                            <div class="col-12">
                                <hr/>
                            </div>
                        </div>
                        <form method="post" class="row">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="col-12" style="text-align:left">
                                    <input type="hidden" asp-for="@Model[i].RoleId" />
                                    <input type="hidden" asp-for="@Model[i].RoleName" />
                                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                                    <label class="form-check-label" asp-for="@Model[i].Selected">
                                        @Model[i].RoleName
                                    </label>
                                </div>
                            }
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="col s12">
                                <input type="submit" value="Update" class="btn btn-primary w-lg" />
                                <a asp-action="Index" class="btn btn-secondary w-lg">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content-->


