                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed" id="flexCheckDefault" />
                                            <label class="form-check-label" for="flexCheckDefault">Email Confirmed</label>
                                        </div>
                                    </div>
                                    <div class="col-4 mb-5">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" asp-for="PhoneNumberConfirmed" id="flexCheckDefault" />
                                            <label class="form-check-label" for="flexCheckDefault">Phone Number Confirmed</label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <input type="submit" value="Save" class="btn btn-primary w-lg" />
                                        <a asp-action="Index" asp-controller="UserRole" class="btn btn-secondary text-bg-secondary w-lg">Users List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- Tabs content -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content-->
