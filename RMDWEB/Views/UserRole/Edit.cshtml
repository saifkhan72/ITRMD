                                            {
                                                <option value="@Model.DepartmentId" selected>@Model.DepartmentTbl.Name</option>

                                            }

                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade"
                                 id="ex3-tabs-3"
                                 role="tabpanel"
                                 aria-labelledby="ex3-tab-3">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-outline mb-4">
                                            <input asp-for="Designation" type="text" id="form1Example7" class="form-control" />
                                            <label class="form-label" for="form1Example7">
                                                Designation
