@model ApplicationUser
@{

     


    ViewData["Title"] = "Edit";
    ViewBag.Active = "dab_users";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title">
                <h4 class="mb-0 font-size-18">Edit User</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home Page</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="UserRole">Users</a></li>
                    <li class="breadcrumb-item active">Edit User</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Tabs navs -->
                    <ul class="nav nav-tabs nav-justified mb-5" id="ex1" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active"
                               id="ex3-tab-1"
                               data-mdb-toggle="tab"
                               href="#ex3-tabs-1"
                               role="tab"
                               aria-controls="ex3-tabs-1"
                               aria-selected="true">General Information</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link"
                               id="ex3-tab-2"
                               data-mdb-toggle="tab"
                               href="#ex3-tabs-2"
                               role="tab"
                               aria-controls="ex3-tabs-2"
                               aria-selected="false">Department</a>
                        </li>
