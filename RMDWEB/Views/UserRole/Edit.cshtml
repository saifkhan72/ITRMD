                            <a class="nav-link"
                               id="ex3-tab-3"
                               data-mdb-toggle="tab"
                               href="#ex3-tabs-3"
                               role="tab"
                               aria-controls="ex3-tabs-3"
                               aria-selected="false">Job Details</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link"
                               id="ex3-tab-4"
                               data-mdb-toggle="tab"
                               href="#ex3-tabs-4"
                               role="tab"
                               aria-controls="ex3-tabs-4"
                               aria-selected="false">other Info</a>
                        </li>
                    </ul>
                    <!-- Tabs navs -->
                    <!-- Tabs content -->
                    <form asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All"></div>
                        <div class="tab-content" id="ex2-content">
                            <div class="tab-pane fade show active"
                                 id="ex3-tabs-1"
                                 role="tabpanel"
                                 aria-labelledby="ex3-tab-1">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-outline mb-4">
                                            <input asp-for="Email" type="email" id="form1Example1" class="form-control" />
                                            <label class="form-label" for="form1Example1">Email address</label>
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-outline mb-4">
                                            <input asp-for="FirstName" type="text" id="form1Example2" class="form-control" />
                                            <label class="form-label" for="form1Example2">First Name</label>
                                        </div>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-outline mb-4">
                                            <input asp-for="LastName" type="text" id="form1Example3" class="form-control" />
                                            <label class="form-label" for="form1Example3">Last Name</label>
                                        </div>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-outline mb-4">
                                            <input asp-for="FatherName" type="text" id="form1Example4" class="form-control" />
                                            <label class="form-label" for="form1Example4">Father Name</label>
                                            <span asp-validation-for="FatherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-outline mb-4">
                                            <input asp-for="UserId" type="text" id="form1Example5" class="form-control" />
                                            <label class="form-label" for="form1Example5">User ID</label>
                                        </div>
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-outline mb-4">
                                            <input asp-for="IpAddress" type="text" id="form1Example6" class="form-control" />
                                            <label class="form-label" for="form1Example6">IP Address</label>
                                        </div>
                                        <span asp-validation-for="IpAddress" class="text-danger"></span>
