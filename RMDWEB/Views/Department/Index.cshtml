                    <div class="row">
                        <div class="col-12 text-end">
                            <a asp-action="Edit" asp-controller="Department" class="btn btn-primary mb-3" style="width:155px; letter-spacing:1px;"><i class="mdi mdi-plus"></i>Department</a>
                        </div>
                    </div>
                    <table id="departmentTbl" class="table table-sm  dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Department
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Bank Name
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
