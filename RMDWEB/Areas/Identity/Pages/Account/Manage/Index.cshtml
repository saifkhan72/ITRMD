@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title">
                <h4 class="mb-0 font-size-18">Profile</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home Page</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->


<div class="page-content-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Demo purpose only -->
                    <div style="min-height: 100px;">
                        <partial name="_ManageNav" />
                        <partial name="_StatusMessage" for="StatusMessage" />
                        <form id="profile-form" method="post" class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-6">
                                <div class="form-outline mb-4">
                                    <input asp-for="Username" id="form1Example1" class="form-control" disabled/>
                                    <label class="form-label" for="form1Example1">Username</label>                                        
                                </div>        
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.PhoneNumber" type="text" id="form1Example8" class="form-control" />
                                        <label class="form-label" for="form1Example8">Phone Number</label>
                                    </div>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="co-12">
                            <button id="update-profile-button" type="submit" class="w-100 btn btn-primary">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content-->



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
