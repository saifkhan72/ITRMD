@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title">
                <h4 class="mb-0 font-size-18">Email</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home Page</a></li>
                    <li class="breadcrumb-item">Profile</li>
                    <li class="breadcrumb-item active">Email</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Demo purpose only -->
                    <div style="min-height: 100px;">
                        <partial name="_ManageNav" />
                        <partial name="_StatusMessage" for="StatusMessage" />
                        <form id="email-form" method="post" class="row">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="col-6">
                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" id="form1Example1" class="form-control" />
                                        <label class="form-label" for="form1Example1">Email address</label>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating input-group">
                                    <input asp-for="Email" class="form-control" disabled />
                                    <div class="input-group-append">
                                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                                    </div>
                                    <label asp-for="Email" class="form-label"></label>
                                </div>
                            }
                            else
                            {
                                <div class="col-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Email" type="email" id="form1Example1" class="form-control" disabled/>
                                        <label class="form-label" for="form1Example1">Email address</label>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                                </div>
                            }
                            <div class="col-6">
                                    <div class="form-outline mb-4">
                                    <input asp-for="Input.NewEmail" type="email" id="form1Example1" class="form-control" />
                                        <label class="form-label" for="form1Example1">Email address</label>
                                    </div>
                                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-primary">Change email</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content-->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
